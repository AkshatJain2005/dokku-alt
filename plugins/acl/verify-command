#!/bin/bash

source "$(dirname $0)/vars"

cat

[[ -z "$NAME" ]] && [[ $(id -un) != "root" ]] && fail "Access denied. No user supplied."

if [[ "$NAME" != "deploy" ]]; then
    # Allow everything
    exit 0
fi

[[ -z "$FINGERPRINT" ]] && fail "Access denied. No fingerprint supplied."

read ACL_LEVEL ACL_APPNAME < <(: | pluginhook get-acl "$@")

if [[ -z "$ACL_LEVEL" ]] || [[ -z "$ACL_APPNAME" ]]; then
    fail "Access denied. You don't have permission to access this app."
fi

check_app_name "$ACL_APPNAME"

case "$ACL_APPNAME" in
    developer)
        if is_developer_fingerprint_allowed "$FINGERPRINT"; then
            exit 0
        fi
        ;;

    deploy)
        if is_fingerprint_allowed "$FINGERPRINT"; then
            exit 0
        fi
        if is_developer_fingerprint_allowed "$FINGERPRINT"; then
            exit 0
        fi
        ;;
esac

fail "Access denied. You don't have permission to access this app."
